{
  "manifest_version": 2,

  "name": "InterDesk: Intercom Desk Helper",
  "description": "This extension queries the Intercom API and Desk API",
  "version": "1.1",

  "browser_action": {
    "default_icon": "pantheon-logo.png",
    "default_popup": "popup.html"
  },
      
  "permissions": [
    "activeTab",
    "tabs",
    "cookies",
    "https://*.intercom.io/",
    "https://*.desk.com/"
  ]
}
